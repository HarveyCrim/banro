    if (Session["userinfo"] != null)
    {
        auth = (BanroWebApp.Models.Authenticate)Session["userinfo"];
    }
    else
    {
        Response.Redirect("~/");
    }
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">
                Logs  <i class="fa fa-cogs" style="float:right;"></i>
            </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    @using (@Html.BeginForm())
    {
