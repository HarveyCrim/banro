    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">
                Subsidiaries <i class="fa fa-bank" style="float:right;"></i>
            </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
  
    @using (@Html.BeginForm())
    {
        @*<div class="form-group input-group">
      
        <form method="get">
           
            <input type="text" name="namesucc" id="namesucc" class="form-control" />
