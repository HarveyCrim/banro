@model BanroWebApp.Models.MonthList
@{
    ViewBag.Title = "MedicalCrusherIssued";
    Layout = "~/Views/Shared/_Menu.cshtml";
    BanroWebApp.Models.Authenticate auth = null;
    if (Session["userinfo"] != null)
    {
        auth = (BanroWebApp.Models.Authenticate)Session["userinfo"];
    }
    else
    {
        Response.Redirect("~/");
    }
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">
                History of Medical Vouchers and Cost<i class="fa fa-print" style="float:right;"></i>
            </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Cost per hospital
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6" style="width:100%">
                            <form method="post" >
                                <div data-ng-app="app" ng-controller="CtrlHome">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                <div style="width:50%">

                                    <div class="form-group">
                                        <label>From Month </label>
                                        @Html.DropDownListFor(Model => Model.FromMonth, (IEnumerable<SelectListItem>)ViewBag.MonthList, new { Class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>To Month</label>

                                        @Html.DropDownListFor(Model => Model.ToMonth, (IEnumerable<SelectListItem>)ViewBag.MonthList, new { Class = "form-control" })
                                        @*<div class="input-group date dp" style="" data-provider="datepicker">
                <input id="dateCmd2" ng-model="dateCmd2" style="" type="text" placeholder="To" name="name" class="form-control" />
                <div class="input-group-addon">
                    <span class="fa fa-th"></span>
                </div>
            </div>*@
                                    </div>

                                    <div class="form-group">
                                        <label>Year</label>
                                        @Html.DropDownListFor(Model => Model.year, (IEnumerable<SelectListItem>)ViewBag.YearList, new { Class = "form-control" })
                                        @*<div class="input-group date dp" style="" data-provider="datepicker">
                <input id="dateCmd2" ng-model="dateCmd2" style="" type="text" placeholder="To" name="name" class="form-control" />
                <div class="input-group-addon">
                    <span class="fa fa-th"></span>
                </div>
            </div>*@
                                    </div>
                                    <div class="form-group" style="display:none">
                                        @Html.TextBoxFor(Model => Model.ArrayCost, new { Class = "form-control", @Id = "textCost" })

                                    </div>
                                    <div style="width:100%;text-align:left;">
                                        <button type="submit" class="btn btn-success"><i class="fa fa-file-excel-o"></i> Generate File</button>
                                    </div>
                                </div>
                                      
                                      
                                        

                                       

                                    }
                                    <br/>
                                    <div style="width:40%;float:right;position:relative;top:-20em;border:1px solid silver">
                                        <div class="table-responsive">
                                            @*  <h5 ng-show="loading" class="center-block" style="text-align:center;">Loading data, please wait...</h5>*@
                                            <table class="table" style="font-size:12px;">
                                                <thead style="background:silver;color:white;">
                                                    <tr>
                                                        <td style="width:4em; border-right: 1px solid white;"><input id="all" type="checkbox" ng-click="choiceCost('all')" /> All</td>
                                                        <td>Categories beneficiairies</td>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td style="width:4em;"><input id="check1" type="checkbox" ng-click="choiceCost('beneficiairies')" /></td>
                                                        <td>Beneficiairies</td>
                                                    </tr>

                                                    <tr>
                                                        <td style="width:4em;"><input id="check2" type="checkbox" ng-click="choiceCost('casual')" /></td>
                                                        <td>Casuals</td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:4em;"><input id="check3" type="checkbox" ng-click="choiceCost('contractor')" /></td>
                                                        <td>Contractor</td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:4em;"><input id="check4" type="checkbox" ng-click="choiceCost('visitor')" /></td>
                                                        <td>Visitor</td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>                 
                      </form>


                        </div>
                      
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">
                            @* <img src="~/Content/img/user2-160x160.jpg" alt="Alternate Text" style="width:260px;height:180px;" />*@
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
