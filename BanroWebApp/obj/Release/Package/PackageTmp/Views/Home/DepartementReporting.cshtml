@model BanroWebApp.Models.RMV_Department
@{
    ViewBag.Title = "MedicalCrusherIssued";
    Layout = "~/Views/Shared/_Menu.cshtml";
    BanroWebApp.Models.Authenticate auth = null;
    if (Session["userinfo"] != null)
    {
        auth = (BanroWebApp.Models.Authenticate)Session["userinfo"];
    }
    else
    {
        Response.Redirect("~/");
    }
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">
                Reporting per department<i class="fa fa-print" style="float:right;"></i>
            </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Reporting System /  Per Departement
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="" style="width:100%;display:inline-block">
                            <form method="post">
                                <div data-ng-app="app" ng-controller="CtrlHome">
                                    @using (Html.BeginForm())
                                    {


                                        @Html.AntiForgeryToken()
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Company</label>
                                                @Html.DropDownListFor(Model => Model.Company, (IEnumerable<SelectListItem>)ViewBag.departements, new { Class = "form-control", @Id = "cboCompany", data_ng_model = "cboCompany", data_ng_change = "changeCompany()" })
                                            </div>
                                            <div class="form-group">
                                                <label>Starting Date</label>
                                                <div class="input-group date dp" style="" data-provider="datepicker">
                                                    @Html.TextBoxFor(Model => Model.from, new { Class = "form-control", data_ng_model = "dateFrom", @Id = "dateFrom",placeholder="From" })
                                                   @* <input id="dateCmd1" style="" ng-model="dateCmd1" placeholder="From" type="text" name="name" class="form-control" />*@
                                                    <div class="input-group-addon">
                                                        <span class="fa fa-th"></span>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="form-group">
                                                <label>Ending Date</label>
                                                <div class="input-group date dp" style="" data-provider="datepicker">
                                                    @Html.TextBoxFor(Model => Model.to, new { Class = "form-control", data_ng_model = "dateTo", @Id = "dateTo", placeholder = "To" })
                                                  @*  <input id="dateCmd2" ng-model="dateCmd2" style="" type="text" placeholder="To" name="name" class="form-control" />*@
                                                    <div class="input-group-addon">
                                                        <span class="fa fa-th"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-control" style="display:none;">
                                                <label>Data List</label>
                                                
                                                    @Html.TextBoxFor(Model => Model.dataList, new { Class = "form-control", data_ng_model = "dataList", @Id = "dataList", placeholder = "Data List" })
                                                   
                                            </div>

                                            
                                            <div style="width:100%;text-align:left;">

                                                <button type="button" class="btn btn-success" ng-click="sendExportRMVD()"><i class="fa fa-file-excel-o"></i> Generate File</button>
                                                <button type="submit" style="display:none;" id="rmvdepBtn" class="btn btn-success"><i class="fa fa-file-excel-o"></i> Generate File</button>
                                            </div>
                                        </div>
                                        


                                        

                                    }
                                    <div class="col-lg-6" style="float:right">
                                        <div class="table-responsive">
                                            @*  <h5 ng-show="loading" class="center-block" style="text-align:center;">Loading data, please wait...</h5>*@
                                            <table class="table" style="font-size:12px;">
                                                <thead style="background:silver;color:white;">
                                                    <tr>
                                                        <td style="width: 20px; border-right: 1px solid white;">Choice</td>
                                                        <td>Department name</td>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="dep in listDeparts">
                                                        <td style="width:20px;"><input type="checkbox" ng-click="checkedDepartment(dep)" /></td>
                                                        <td>{{dep.code_depart}}</td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">
                            @* <img src="~/Content/img/user2-160x160.jpg" alt="Alternate Text" style="width:260px;height:180px;" />*@
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
