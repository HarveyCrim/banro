@model BanroWebApp.Models.t_logger
@{
   // Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
}
<style>

</style>

<nav id="header" class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" style="color:white;" href="index.html">Family Composition  </a>
    </div>
    <!-- /.navbar-header -->
</nav>

<div class="container">
    <div class="row" id="logger">
        
        <div class="col-md-4 col-md-offset-4">
            @{
                if (Request.HttpMethod.Equals("POST") && ViewBag.errorMessage=="404")
                {
                    <div class="alert alert-danger" id="alertImport" style="text-align:center;">
                        <i class="fa fa-close"></i> <span id="messageImport">Failed login</span>
                    </div>        
                }
            }
            <div  style="width:100%;">
                <img src="~/Images/logo.png" style="width:100%;" alt="Alternate Text" /><br />

            </div>
            <div class="login-panel panel panel-default" style="z-index:9999;margin-top:0.5em;">
                <div class="panel-heading">

                    <h3 class="panel-title">Connect <i style="float:right;" class="fa fa-lock"></i></h3>
                </div>
                <div class="panel-body">
                    <form role="form" method="post">
                        @using (Html.BeginForm())
                        {
                             @Html.AntiForgeryToken()
                       
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(Model => Model.C_username, new{Class="form-control",placeholder="username" })  
                                @Html.ValidationMessageFor(Model => Model.C_username)


                
                               
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(Model => Model.password, new { Class = "form-control", placeholder = "Password" })
                                @Html.ValidationMessageFor(Model=>Model.password)
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Active session
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
                        </fieldset>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<footer>
    <hr />
    <p> Copyright &copy; @DateTime.Now.Year BANRO, <span style="font-size:12px;">Corporation</span></p>
</footer>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Styles.Render("~/Content/css")